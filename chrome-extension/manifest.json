{
    "manifest_version": 2,
    "name": "My Chrome Extension",
    "version": "1.0",
    "description": "A simple Chrome extension",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "icons": {
        "128": "icons/128.png",
        "32": "icons/32.png"
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "icons/128.png",
        "32": "icons/32.png"
      }
    },
    "permissions": [
      "activeTab"
    ]
  }